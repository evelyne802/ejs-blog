<%- include("partials/header.ejs") %>
<h1>Create a post</h1>

<form class="form" action="/updatePost/<%= post.id %>" method="POST">
    <label class="form-label" for="title">Title</label>
    <input class="title-textbox" type="text" name="title" value="<%= post.title %>" required>

    <label class="form-label" for="content">Content</label>
    <textarea class="content-textbox" name="content" required><%= post.text %></textarea>

    <input class="button" type="submit" value="Update">
</form>

